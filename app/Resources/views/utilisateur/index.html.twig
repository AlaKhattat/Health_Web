{% extends 'HealthAdvisorBundle:Default:index.html.twig' %}
{% block head %}
    {{ parent() }}
{% endblock %}
{% block body %}
    {% block header %}
        {{ parent() }}
    {% endblock %}


    <div class="doctor-single mt-80 mb-60">
        <div class="container">
            <div class="row">
                <div class="col-sm-5">
                    <div class="doctor-img">
                        <img src="{{ asset('images/doctor-single.jpg') }}" class="img-responsive" alt="">
                    </div>
                    <div class="doctor-contact">
                        <ul class="contact-list">
                            <li>
                                <i class="fa fa-phone"></i> +1800-567-1234
                            </li>
                            <li>
                                <i class="fa fa-envelope"></i> medwise@example.com
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-sm-7">
                    <div class="doctor-details">
                        <h2 class="doctor-name"> DÃ©tails Profile </h2>
                        <hr class="hr-1 left">
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <input class="form-control" value="{{ utilisateur.username }}" type="text"
                                           id="fname" name="fname" readonly>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <input class="form-control" value="{{ utilisateur.email }}" type="text" id="email"
                                           name="email" readonly>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">

                                <div class="form-group">
                                    <input class="form-control" value="{{ utilisateur.nom }}" type="text" id="fname"
                                           name="fname" readonly>
                                </div>
                            </div>
                            <div class="col-sm-6">

                                <div class="form-group">
                                    <input class="form-control" value="{{ utilisateur.prenom }}" type="text" id="fname"
                                           name="fname" readonly>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">

                                <div class="form-group">
                                    <input class="form-control" value="{{ utilisateur.dateNaiss|date }}" type="text"
                                           id="fname" name="fname" readonly>
                                </div>
                            </div>
                            <div class="col-sm-6">

                                <div class="form-group">
                                    <input class="form-control" value="{{ utilisateur.sexe }}" type="text" id="fname"
                                           name="fname" readonly>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">

                                <div class="form-group">
                                    <input class="form-control" value="{{ utilisateur.pays }}" type="text" id="fname"
                                           name="fname" readonly>
                                </div>
                            </div>
                            <div class="col-sm-6">

                                <div class="form-group">
                                    <input class="form-control" value="{{ utilisateur.ville }}" type="text" id="fname"
                                           name="fname" readonly>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">

                                <div class="form-group">
                                    <input class="form-control" value="{{ utilisateur.cin }}" type="text" id="fname"
                                           name="fname" readonly>
                                </div>
                            </div>
                            <div class="col-sm-6">

                                <div class="form-group">
                                    <input class="form-control" value="{{ utilisateur.numTel }}" type="text" id="fname"
                                           name="fname" readonly>
                                </div>
                            </div>
                        </div>
                        {% if   utilisateur.roles[0] =="ROLE_ADMIN" %}
                            <div class="row">
                                <div class="col-sm-6">

                                    <div class="form-group">
                                        <input class="form-control" value="{{ medecin.specialite }}" type="text"
                                               id="fname" name="fname" readonly>
                                    </div>
                                </div>
                                <div class="col-sm-6">

                                    <div class="form-group">
                                        <input class="form-control" value="{{ medecin.adresse }}" type="text" id="fname"
                                               name="fname" readonly>
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                        <p id="status"></p>
                        <div class="form-group">
                            <a href="{{ path('utilisateur_edit', { 'id': utilisateur.id }) }}">
                                <button class="btn btn-primary" type="submit" name="submit"><i class="fa fa-edit"></i>Modifier
                                </button>
                            </a>
                            <a href="{{ path('fos_user_change_password') }}"><button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modal1"><i class="fa fa-lock"></i>Changer Mot de passe </button>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


{% block script %}
    {{ parent() }}
    {% endblock %}
    {% block footer %}
        {{ parent() }}
    {% endblock %}
{% endblock %}
