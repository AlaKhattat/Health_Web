{% extends 'base.html.twig' %}

{% block body %}
    <h1>Produit</h1>

    <table>
        <tbody>
            <tr>
                <th>Idproduit</th>
                <td>{{ produit.idProduit }}</td>
            </tr>
            <tr>
                <th>Reference</th>
                <td>{{ produit.reference }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ produit.nom }}</td>
            </tr>
            <tr>
                <th>Prixvente</th>
                <td>{{ produit.prixVente }}</td>
            </tr>
            <tr>
                <th>Urlimage</th>
                <td>{{ produit.urlImage }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ produit.description }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ produit.type }}</td>
            </tr>
            <tr>
                <th>Datemise</th>
                <td>{% if produit.dateMise %}{{ produit.dateMise|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Promotion</th>
                <td>{{ produit.promotion }}</td>
            </tr>
            <tr>
                <th>Iduser</th>
                <td>{{ produit.idUser }}</td>
            </tr>
            <tr>
                <th>Quantite</th>
                <td>{{ produit.quantite }}</td>
            </tr>
            <tr>
                <th>Signalisationetat</th>
                <td>{{ produit.signalisationEtat }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('produit_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
