{% extends 'base.html.twig' %}

{% block body %}
    <h1>Question</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ question.id }}</td>
            </tr>
            <tr>
                <th>Question</th>
                <td>{{ question.question }}</td>
            </tr>
            <tr>
                <th>Datepublication</th>
                <td>{% if question.datePublication %}{{ question.datePublication|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Modificationetat</th>
                <td>{% if question.modificationEtat %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Specialite</th>
                <td>{{ question.specialite }}</td>
            </tr>
            <tr>
                <th>Signalisationetat</th>
                <td>{% if question.signalisationEtat %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('liste_question') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('modifier_question', { 'id': question.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
