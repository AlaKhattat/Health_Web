{% extends 'HealthAdvisorBundle:Default:index.html.twig' %}

{% block head %}
{{ parent() }}
{% endblock %}
{% block body %}
    <div class="page-header">
        <div class="container">
            <h1></h1>
            <div class="breadcrumb-2">
                <ul class="breadcrumb">
                    <li><a href="{{ path('health_advisor_homepage') }}">Home</a></li>
                    <li class="active">Modifier mot de passe</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="col-sm-8 mt-20">
        <form id="main-contact-form">

                {{ form_start(form) }}
                <div class="form-group">
                    {{ form_widget(form.current_password, { 'attr' : {'class': 'form-control','placeholder': 'Mot de passe actuel'}}) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.plainPassword.first, { 'attr' : {'class': 'form-control','placeholder': 'Nouveau mot de passe'}}) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.plainPassword.second, { 'attr' : {'class': 'form-control','placeholder': 'Confirmer nouveau mot de passe'}}) }}
                </div>
                {{ form_end(form) }}

            <p id="status"></p>
            <div class="form-group">
                <button class="btn btn-primary" type="submit" name="submit"><i class="fa fa-edit"></i>Modifier mot de passe</button>
            </div>
        </form>
    </div>

{% endblock %}
