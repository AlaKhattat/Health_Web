{% trans_default_domain 'FOSUserBundle' %}

<div class="col-sm-8 mt-20">
    <h3 class="heading">Contact Us. <span class="color1">We love hearing from you.</span></h3>
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <form id="main-contact-form" action="{{ path("fos_user_security_check") }}" method="post">
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}
        <div class="col-sm-6">
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Username" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username">
            </div>
            <div class="form-group">
                <input class="form-control" type="password" placeholder="Password" id="password" name="_password" required="required" autocomplete="current-password" />
            </div>
            <div class="row">
                <div class="col-sm-2">

                    <div class="form-group">
                        <input class="form-control" type="checkbox" id="remember_me" name="_remember_me" value="on" />
                    </div>
                </div>
                <div class="col-sm-10">

                    <div class="form-group">
                        <input class="form-control" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>


