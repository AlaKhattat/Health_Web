{% extends "HealthAdvisorBundle:Default:index.html.twig" %}

    {% block head %}
        <head>
            {{ parent() }}

            <link rel="stylesheet" href="{{ asset('messagerie/css/bootstrap.min.css') }}" type="text/css">
            <link rel="stylesheet" href="{{ asset('messagerie/css/msg.css') }}" type="text/css"/>
            <script src="{{ asset('jquery-3.2.1.js') }}"></script>
        </head>
    {% endblock %}

{% block body %}
    {% block header %}
        {{ parent() }}
    {% endblock %}
    <div class="page-header">
        <div class="container">
            <h1>Messagerie Instantanée</h1>
            <div class="breadcrumb-2">
                <ul class="breadcrumb">
                    <li><a href="{{ path('health_advisor_homepage') }}">Home</a></li>
                    <li class="active">Messagerie</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container mt-80">
        <div class="row">
            <div class="panel panel-info">

                <div class="panel-body">
            <div class="col-sm-12">
                <div class="col-sm-2">
                    <div class="feature-box right">
                        <span class="count">1</span>
                        <div class="text">
                          <h4 class="heading"><a href="{{ url('fos_message_inbox') }}">{% trans from 'FOSMessageBundle' %}inbox{% endtrans %}</a></h4>
                        </div>
                    </div>

                    <div class="feature-box right">
                        <span class="count">2</span>
                        <div class="text">
                            <h4 class="heading"><a href="{{ url('fos_message_sent') }}">{% trans from 'FOSMessageBundle' %}Envoyé{% endtrans %}</a></h4>

                        </div>
                    </div>
                    <div class="feature-box right">
                        <span  class="count">3</span>
                        <div class="text">
                            <h4 class="heading"><a href="{{ url('fos_message_deleted') }}">{% trans from 'FOSMessageBundle' %}Supprimer{% endtrans %}</a></h4>

                        </div>
                    </div>
                </div>
                <div class="col-sm-8">
                            <div class="col-sm-11 col-sm-offset-4 frame">

                                <ul id="ull">
                                    {% block fos_message_content %}{% endblock %}
                                </ul>

                            </div>
                </div>
            </div>

        </div>
                <div class="panel-footer"></div>

            </div>
    </div>
    </div>


    {% block footer %}
        {{ parent() }}
    {% endblock %}
    {% block script %}
        {{ parent() }}
    {% endblock %}
{% endblock %}
