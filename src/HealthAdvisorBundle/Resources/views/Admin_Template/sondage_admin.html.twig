{% extends '@HealthAdvisor/Admin_Template/index.html.twig' %}

{% block contenu %}

        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Liste des sondages</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li><a href="#"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="#">Settings 1</a>
                                </li>
                                <li><a href="#">Settings 2</a>
                                </li>
                            </ul>
                        </li>
                        <li><a href="#"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <a href="{{ path('form_sondage_admin') }}"><button type="button" class="btn btn-danger"><i class="fa fa-plus">  Ajouter Sondage</i></button></a>
                    <table id="datatable-buttons" class="table table-striped table-bordered">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Sondage</th>
                            <th>Action</th>
                            <th>Statistiques</th>

                        </tr>
                        </thead>


                        <tbody>
                        {% for s in sondages %}
                        <tr>
                            <td>{{ s.idSondage }}</td>
                            <td>{{ s.nomSondage  }}</td>
                            <td><a href="{{ path('supprimer_sondage_admin', { 'idSondage': s.idSondage }) }}"><button type="button" class="btn btn-danger"><i class="fa fa-trash-o">  Supprimer</i></button></a></td>
                            <td><a href="{{ path('stat', { 'idSondage': s.idSondage }, { 'nomSondage': s.nomSondage }) }}"><button type="button" class="btn btn-danger"><i class="fa fa-line-chart">  Statistiques</i></button></a></td>

                            {% endfor %}
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>


{% endblock %}