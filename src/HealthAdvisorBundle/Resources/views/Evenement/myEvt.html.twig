{% extends 'HealthAdvisorBundle:Default:index.html.twig' %}
{% block head %}
    {{ parent() }}
{% endblock %}
{% block body %}
    {% block header %}
        {{ parent() }}
    {% endblock %}
    <div class="page-header">
        <div class="container">
            <h1>Mes événements</h1>
            <div class="breadcrumb-2">
                <ul class="breadcrumb">
                    <li><a href="home-version-1.html">Accueil</a></li>
                    <li class="active">Mes événements</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container mt-80 mb-60">
        <div class="row">
            <div class="col-sm-12">
                <h2 class="heading text-center">Gérer vos événements</h2>
                <h3></h3>
                <hr class="hr-1">
            </div>
            {% for i in evt %}
                {% if app.user.username is sameas(i.createur) %}
                <div class="col-sm-6">
                    <div class="event-box" style="background-image:url({{ i.urlImage }})">
                        <div class="event-header">
                            <h3 class="heading"><a style="color: #ffffff" href="{{ path('afficheEvt',{'id':i.id}) }}">{{ i.nom }}</a></h3>
                            <ul class="event-details">
                                <li><i class="fa fa-calendar"></i> {{ i.date|date('d/m/Y') }}</li>
                                <li><i class="fa fa-clock-o"></i> {{ i.heure|date('H:i') }}</li>
                                <li><i class="fa fa-map-marker"></i> {{ i.location }}</li>
                                {% if i.type is sameas("Evénement sportif") %}
                                    <li><i class="fa fa-soccer-ball-o"></i> {{ i.type }}</li>
                                {% elseif i.type is sameas("Dépistage") %}
                                    <li><i class="fa fa-stethoscope"></i> {{ i.type }}</li>
                                {% elseif i.type is sameas("Sensibilisation") %}
                                    <li><i class="fa fa-exclamation-circle"></i> {{ i.type }}</li>
                                {% elseif i.type is sameas("Conférence") %}
                                    <li><i class="fa fa-area-chart"></i> {{ i.type }}</li>
                                {% endif %}
                            </ul>
                            <div class="event-text">
                                <br/>
                                <p class="justify">{{ i.description }}</p>
                                <br/>
                                <a href="{{ path('afficheEvt', {'id':i.id}) }}" class="btn btn-black btn-sm">Consulter</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}
            {% endfor %}
        </div>
    </div>
    </div>
    {% block footer %}
        {{ parent() }}
    {% endblock %}
{% endblock %}
